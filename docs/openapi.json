          },
          "start": {
            "type": "string",
            "format": "date-time",
            "title": "Start"
          },
          "name": {
            "type": "string",
            "title": "Name"
          },
          "note": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Note"
          },
          "type": {
            "type": "integer",
            "title": "Type"
          }
        },
        "type": "object",
        "required": [
          "id",
          "start",
          "name",
          "type"
        ],
        "title": "AcceptedEventData"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
