{
  "openapi": "3.1.0",
  "info": {
    "title": "Calendar API",
    "version": "0.1.0"
  },
  "paths": {
    "/api/Calendar": {
      "get": {
        "tags": [
          "calendar"
        ],
        "summary": "Get Calendar",
        "operationId": "get_calendar_api_Calendar_get",
        "parameters": [
          {
            "name": "tf_days",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "description": "Days from today to start filtering (0 = tomorrow, -1 = today, 1 = tomorrow, etc.)",
              "default": 0,
              "title": "Tf Days"
            },
            "description": "Days from today to start filtering (0 = tomorrow, -1 = today, 1 = tomorrow, etc.)"
          },
          {
            "name": "after_days",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "description": "Days from today to end filtering (0 = next week, 1 = tomorrow, 7 = next week)",
              "default": 0,
              "title": "After Days"
            },
            "description": "Days from today to end filtering (0 = next week, 1 = tomorrow, 7 = next week)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AcceptedEventData"
                  },
                  "title": "Response Get Calendar Api Calendar Get"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/Events": {
      "get": {
        "tags": [
          "calendar"
        ],
        "summary": "Get Events",
        "description": "Возвращает список событий с возможностью фильтрации по ID, архивному статусу и типу.\n\nТипы событий:\n- 1: Встречи/планерки\n- 2: Разработка/техническая работа  \n- 3: Демо/презентации\n- 4: Неформальные события",
        "operationId": "get_events_api_Events_get",
        "parameters": [
          {
            "name": "ids",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Comma-separated list of event IDs (e.g., '1,2,3')",
              "title": "Ids"
            },
            "description": "Comma-separated list of event IDs (e.g., '1,2,3')"
          },
          {
            "name": "isArchive",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Filter archived events (currently not implemented)",
              "default": false,
              "title": "Isarchive"
            },
            "description": "Filter archived events (currently not implemented)"
          },
          {
            "name": "type",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Comma-separated list of event types (e.g., '1,2')",
              "title": "Type"
            },
            "description": "Comma-separated list of event types (e.g., '1,2')"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AcceptedEventData"
                  },
                  "title": "Response Get Events Api Events Get"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/Event": {
      "post": {
        "tags": [
          "calendar"
        ],
        "summary": "Create Event",
        "description": "Записывает event в BD и возвращает сообщение об успешном создании события\n\nПараметры:\n- Start: Unix timestamp в секундах (опционально, по умолчанию - текущее время)\n- Name: Название события (обязательно)\n- Note: Описание события (опционально)\n- Type: Тип события (0-4)",
        "operationId": "create_event_api_Event_post",
        "parameters": [
          {
            "name": "Start",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Event start date as Unix timestamp (seconds). If not provided - current time",
              "title": "Start"
            },
            "description": "Event start date as Unix timestamp (seconds). If not provided - current time"
          },
          {
            "name": "Name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Event name",
              "title": "Name"
            },
            "description": "Event name"
          },
          {
            "name": "Note",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Event note",
              "title": "Note"
            },
            "description": "Event note"
          },
          {
            "name": "Type",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "description": "Event type (0=default, 1=meeting, 2=development, 3=demo, 4=informal)",
              "default": 0,
              "title": "Type"
            },
            "description": "Event type (0=default, 1=meeting, 2=development, 3=demo, 4=informal)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AcceptedEventCreated"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AcceptedEventCreated": {
        "properties": {
          "message": {
            "type": "string",
            "title": "Message"
          }
        },
        "type": "object",
        "required": [
          "message"
        ],
        "title": "AcceptedEventCreated"
      },
      "AcceptedEventData": {
        "properties": {
          "id": {
            "type": "integer",
